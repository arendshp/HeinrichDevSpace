<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    tools:context=".Calculation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_calc_back_menu"
            android:textColor="@color/white"
            android:backgroundTint="#ff9900"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

        <TextView
            android:id="@+id/calcTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/calculation_title_text"
            android:textSize="40sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:text="@string/title_description_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calcSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/how_to_earn_points_text_heading"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calcInfo"
                android:layout_width="295sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/how_to_earn_points_text_paragraph"
                android:textAlignment="center"
                android:justificationMode="inter_word"
                android:layout_centerHorizontal="true"
                android:textColor="#01aaad"
                android:textSize="14sp"
                android:gravity="center_horizontal" />
        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/costText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35sp"
                android:layout_weight="1"
                android:text="@string/cost_of_item_text"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cost"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50sp"
                android:hint="@string/currency_hint"
                android:inputType="numberDecimal"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ietemsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35sp"
                android:layout_weight="1"
                android:text="@string/amount_of_items_text"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/items"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50sp"
                android:hint="@string/items_hint"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/calculatePoints"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#ff9900"
                android:text="@string/button_calculate_points"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="35sp"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:text="@string/points_results" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>